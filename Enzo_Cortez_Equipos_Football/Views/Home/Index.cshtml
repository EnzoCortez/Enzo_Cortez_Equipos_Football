@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="text-center">Sistema de Manejo de Equipos y Jugadores</h1>
    <div class="container">
        <div class="jumbotron text-center" style="background-image: url('/images/futbol-banner.jpg'); background-size: cover;">
            <h2>Bienvenidos a la Liga Pro Ecuador 2024</h2>
        </div>
        <div class="row">
            <div class="col-md-4">
                <h3>Equipos</h3>
                <p>Gestiona los equipos participantes en la Liga Pro.</p>
                <a href="/Equipoes" class="btn btn-primary">Ver Equipos</a>
            </div>
            <div class="col-md-4">
                <h3>Jugadores</h3>
                <p>Consulta la lista de jugadores por equipo.</p>
                <a href="/Jugadors" class="btn btn-primary">Ver Jugadores</a>
            </div>
            <div class="col-md-4">
                <h3>Estadios</h3>
                <p>Información sobre los estadios de la Liga Pro.</p>
                <a href="/Estadios" class="btn btn-primary">Ver Estadios</a>
            </div>

        </div>

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="/Imagenes/Liga.jpg" alt="Liga">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Imagenes/Barcelona.jpg" alt="Barcelona">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/imagenes/España.png" alt="España">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/imagenes/Independiante.png" alt="Independiente">
                </div>

            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Anterior</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Siguiente</span>
            </a>
        </div>



    </div>



</div>
